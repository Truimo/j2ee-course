<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.truimo.mapper.BookMapper">
    <select id="getBookById" resultType="book">
        SELECT *
        FROM `book`
        WHERE `id` = #{id}
    </select>
    <select id="getBookByName" resultType="book">
        SELECT *
        FROM `book`
        WHERE `name` = #{name}
    </select>
    <select id="getAllBook" resultType="book">
        SELECT *
        FROM `book`
    </select>
    <insert id="addBook" parameterType="book">
        INSERT INTO book(name, press, author) VALUE (#{name}, #{press}, #{author})
    </insert>
    <delete id="delBookById" parameterType="book">
        DELETE
        FROM `book`
        WHERE `id` = #{id}
    </delete>
    <update id="editBookBySet" parameterType="book">
        update `book`
        <set>
            <if test="null != name and '' != name">
                name = #{name},
            </if>
            <if test="null != press and '' != press">
                press = #{press},
            </if>
            <if test="null != author and '' != author">
                author = #{author},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>